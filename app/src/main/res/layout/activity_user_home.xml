<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".UserHome">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/app_logo_user_home"
            android:layout_width="153dp"
            android:layout_height="83dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/app_text" />

        <ImageView
            android:id="@+id/user_home_acc_icon"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="36dp"
            android:layout_toRightOf="@id/app_logo_user_home"
            android:src="@drawable/user_account" />


        <AutoCompleteTextView
            android:id="@+id/search_bar"
            android:layout_width="311dp"
            android:layout_height="38dp"
            android:layout_below="@+id/app_logo_user_home"
            android:layout_marginTop="0dp"
            android:hint="Search Drivers, Guides, Hotels"
            android:inputType="text"
            android:padding="10dp">


        </AutoCompleteTextView>

        <ImageView
            android:id="@+id/img01"
            android:layout_width="272dp"
            android:layout_height="206dp"
            android:layout_below="@id/search_bar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/hotel01" />

        <ImageView
            android:id="@+id/img02"
            android:layout_width="278dp"
            android:layout_height="208dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="63dp"
            android:src="@drawable/hotel02" />


    </RelativeLayout>


</RelativeLayout>