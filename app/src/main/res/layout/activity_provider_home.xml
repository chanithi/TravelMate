<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ProviderHome">

<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/app_logo_user_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:text="Travel Mate"

        android:textSize="25sp" />

    <ImageView
        android:id="@+id/provider_home_acc_icon"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="36dp"
        android:layout_toRightOf="@id/app_logo_user_home"
        android:src="@drawable/user_account" />

    <TextView
        android:id="@+id/ad01"
        android:layout_width="246dp"
        android:layout_height="192dp"
        android:layout_below="@id/provider_home_acc_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="84dp"
        android:text="Publish your advertisements here" />

    <TextView
        android:layout_width="246dp"
        android:layout_height="192dp"
        android:layout_below="@id/ad01"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="72dp"
        android:text="Publish your advertisements here" />

</RelativeLayout>


</RelativeLayout>