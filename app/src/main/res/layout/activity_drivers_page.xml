<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriversPage">

    <TextView
        android:id="@+id/topicDrivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="119dp"
        android:padding="16dp"
        android:text="Choose a good ride"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/driverImage"
        android:layout_width="match_parent"
        android:layout_below="@id/topicDrivers"
        android:layout_height="200dp"
        android:src="@drawable/driver" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchDrivers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverImage"
        android:layout_margin="16dp"
        android:queryHint="Search by district..." />

    <GridView
        android:id="@+id/gridDrivers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchDrivers"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"
        android:stretchMode="columnWidth"
        android:padding="16dp" />


</RelativeLayout>

