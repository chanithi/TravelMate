<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewRequestsGuide">

    <TextView
        android:id="@+id/titleNRG"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="New Messages"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/msg1G"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/titleNRG"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="110dp"
        android:text="Message1" />

    <TextView
        android:id="@+id/msg2G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg1G"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="315dp"
        android:text="Message2" />

    <Button
        android:id="@+id/btnAcG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleNRG"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="120dp"
        android:layout_toRightOf="@id/msg1G"
        android:background="@drawable/bg_card_btn_orange"
        android:text="Accept"
        android:textColor="@color/white" />

    <Button
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleNRG"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-94dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="522dp"
        android:layout_toRightOf="@id/btnAcG"
        android:background="@drawable/bg_card_btn_grey"
        android:text="Reject"
        android:textColor="@color/white" />

</RelativeLayout>